  },
  "item": [
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-User-Id",
            "value": "1"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"New Task\", \"description\": \"Task description\", \"status\": \"todo\", \"due_date\": \"2025-12-10T12:00:00Z\"}"
        },
        "url": {
          "raw": "http://localhost:8000/api/tasks/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "tasks", ""]
        }
      }
    },
    {
      "name": "Get Tasks List",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-User-Id",
            "value": "1"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/tasks/?status=todo&page=1&size=10",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "tasks", ""],
          "query": [
            {
              "key": "status",
              "value": "todo"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "size",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "Update Task",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-User-Id",
            "value": "1"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"status\": \"done\", \"due_date\": \"2025-12-05T10:00:00Z\"}"
        },
        "url": {
          "raw": "http://localhost:8000/api/tasks/1/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "tasks", "1", ""]
        }
      }
    },
    {
      "name": "Recalculate Overdue (Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-User-Id",
            "value": "1"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/tasks/recalculate_overdue/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "tasks", "recalculate_overdue", ""]
        }
      }
    }
  ]
